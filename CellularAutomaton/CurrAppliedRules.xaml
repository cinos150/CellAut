        <ListView x:Name="PositionBasedListView" PreviewMouseRightButtonUp="positionBasedClick" Margin="0,57,10,157" HorizontalAlignment="Right" Width="213"/>





        <Label x:Name="label" Content="Number Based" HorizontalAlignment="Center" Margin="68,2,323,404"/>
        <Label x:Name="label1" Content="PositionBased" Margin="323,2,72,404" HorizontalAlignment="Center"/>
        <Button x:Name="RefreshNumberBased" Content="refresh Number Based" HorizontalAlignment="Left" Margin="40,0,0,100" VerticalAlignment="Bottom" Width="141" Height="33" Click="RefreshNumberBased_Click"/>
        <Button x:Name="RefreshPositionBased" Content="refresh Position Based" HorizontalAlignment="Right" Margin="0,0,30,100" VerticalAlignment="Bottom" Width="143" Height="33" Click="RefreshPositionBased_Click"/>

    </Grid>
</Window>
