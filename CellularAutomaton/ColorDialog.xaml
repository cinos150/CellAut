<Window x:Class="CellularAutomaton.ColorDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
     
      Title="Pick Color" Height="167.167" 
      KeyDown="Window_KeyDown"
      Width="654" 
      WindowStartupLocation="CenterOwner">
    <Grid>
        <Button x:Name="ChooseButton" Content="Choose" HorizontalAlignment="Left" Margin="5,15,0,0" VerticalAlignment="Top" Width="75" Click="btnOk_Click"/>

        <xctk:ColorPicker x:Name="colorPicker" Margin="91,0,0,0"/>
    </Grid>
</Window>